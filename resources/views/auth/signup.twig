{% extends 'templates/app.twig' %}
{% block title %}Sign up{% endblock %}
{% block contents %}
    <section class="content">
        <div class="register-box">
            <div class="register-logo">
                <a href="{{ base_url() }}"><b>MENA</b> Assistance</a>
            </div>
            <div class="register-box-body">
                <p class="login-box-msg">Register a new membership</p>

                <form action="{{ path_for('auth.signup') }}" method="post" autocomplete="off">
                    <div class="form-group has-feedback{{ errors.first_name ? ' has-error' : '' }}">
                        {#<label for="first_name">First Name</label>#}
                        {#<span class="fa fa-user"></span>#}
                        <input type="text" name="first_name" id="first_name" class="form-control" value="{{ old.first_name }}" placeholder="Your First Name"/>
                        <span class="glyphicon glyphicon-user form-control-feedback"></span>
                        {% if errors.first_name %}
                            <span class="help-block">{{ errors.first_name | first }}</span>
                        {% endif %}
                    </div>

                    <div class="form-group has-feedback{{ errors.last_name ? ' has-error' : '' }}">
                        {#<label for="last_name">Last Name</label>#}
                        {#<span class="fa fa-user"></span>#}
                        <input type="text" name="last_name" id="last_name" class="form-control" value="{{ old.last_name }}" placeholder="Your Last Name"/>
                        <span class="glyphicon glyphicon-user form-control-feedback"></span>
                        {% if errors.last_name %}
                            <span class="help-block">{{ errors.last_name | first }}</span>
                        {% endif %}
                    </div>

                    <div class="form-group has-feedback{{ errors.username ? ' has-error' : '' }}">
                        {#<label for="username">Username</label>#}
                        {#<span class="fa fa-asterisk"></span>#}
                        <input type="text" name="username" id="username" class="form-control" value="{{ old.username }}" placeholder="Pick a unique username"/>
                        <span class="glyphicon glyphicon-user form-control-feedback"></span>
                        {% if errors.username %}
                            <span class="help-block">{{ errors.username | first }}</span>
                        {% endif %}
                    </div>

                    <div class="form-group has-feedback{{ errors.email ? ' has-error' : '' }}">
                        {#<label for="email">Email</label>#}
                        {#<span class="fa fa-envelope"></span>#}
                        <input type="email" name="email" id="email" placeholder="you@domain.com" class="form-control" value="{{ old.email }}"/>
                        <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                        {% if errors.email %}
                            <span class="help-block">{{ errors.email | first }}</span>
                        {% endif %}
                    </div>

                    <div class="form-group has-feedback{{ errors.password ? ' has-error' : '' }}">
                        {#<label for="password">Password</label>#}
                        {#<span class="fa fa-user-secret"></span>#}
                        <input type="password" name="password" id="password" class="form-control" placeholder="Enter Password"/>
                        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                        {% if errors.password %}
                            <span class="help-block">{{ errors.password | first }}</span>
                        {% endif %}
                    </div>

                    <div class="form-group has-feedback{{ errors.confirm_password ? ' has-error' : '' }}">
                        {#<label for="confirm_password">Confirm Password</label>#}
                        {#<span class="fa fa-user-secret"></span>#}
                        <input type="password" name="confirm_password" id="confirm_password" class="form-control" placeholder="Confirm Password"/>
                        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                        {% if errors.confirm_password %}
                            <span class="help-block">{{ errors.confirm_password | first }}</span>
                        {% endif %}
                    </div>
                        <button type="submit" name="submit" id="submit"class="btn btn-default">Sign up</button>

                    {{ csrf.field | raw }}

                </form>

    {#<div class="social-auth-links text-center">#}
    {#<p>- OR -</p>#}
    {#<a href="#" class="btn btn-block btn-social btn-facebook btn-flat"><i class="fa fa-facebook"></i> Sign up using#}
    {#Facebook</a>#}
    {#<a href="#" class="btn btn-block btn-social btn-google btn-flat"><i class="fa fa-google-plus"></i> Sign up using#}
    {#Google+</a>#}
    {#</div>#}

        <a href="{{ path_for('auth.signin') }}" class="text-center">I already have a membership</a>
    </div>
</div>
    <script>
        $(function () {
            $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%' // optional
            });
        });
    </script>
{% endblock %}
